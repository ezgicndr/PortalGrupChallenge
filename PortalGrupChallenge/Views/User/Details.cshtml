
@using Entities
@model User

@{
    ViewBag.Title = "Chosen Profile Information";
}


<div class="container">

    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">

        <div class="col-md-10">
            <h3>@(Model.Name + " " + Model.Surname)</h3>
            <br />
            <h5><b>@Html.DisplayNameFor(model => model.Username) : </b>@Model.Username</h5>
            <h5><b>@Html.DisplayNameFor(model => model.Email) : </b>@Model.Email</h5>
            <h5><b>@Html.DisplayNameFor(model => model.Password) : </b>@Model.Password</h5>
        </div>

    </div>
</div>